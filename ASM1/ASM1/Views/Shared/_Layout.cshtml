<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASM1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Style.css" />
</head>
<body>
    <section id="header">
        <div class="header container">
            <div class="nav-bar">
                <div class="brand">
                    <a asp-controller="ASM" asp-action="Index" >
                        <h1><span>H</span>ien <span>S</span>tore</h1>
                    </a>
                </div>
                <div class="nav-list">
                    <div class="hamburger">
                        <div class="bar"></div>
                    </div>
                    <ul>

                        <li class="sp">
                            <a href="#San-Pham" data-after="SanPham">Sản Phẩm</a>
                            <div class="sub-menu1">
                                <ul>
                                    <li>
                                        <a href="#Nam">
                                            <img src="/images/main/chonam.jpg">
                                            <h3>Cho Nam</h3>
                                        </a>
                                    </li>

                                    <li>
                                        <a href="#Nu">
                                            <img src="/images/main/chonu.jpeg">
                                            <h3>Cho Nữ</h3>
                                        </a>
                                    </li>
                                </ul>
                            </div>

                        </li>
                        <li><a href="#Nam" data-after="Nam">Nam</a></li>
                        <li><a href="#Nu" data-after="Nu">Nữ</a></li>
                        <li><a href="#Thong-Tin" data-after="ThongTin">Thông Tin</a></li>
                        <li>
                            <a>
                                <div class="search-box">
                                    <div class="input-box">
                                        <input type="text" placeholder="Tìm Kiếm Sản Phẩm">
                                    </div>
                                    <button class="search-button">
                                        <img src="/images/main/search.png" alt="">
                                    </button>
                                </div>
                            </a>
                        </li>
                        <li>
                            @{ if (ViewBag.UsersName != null)
                                {
                                    <a asp-controller="ASM" asp-action="Cart">
                                        <div class="gio-hang">
                                            <button class="button-giohang">
                                                <img src="/images/main/giohang.png">
                                            </button>
                                        </div>
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="ASM" asp-action="Login">
                                        <div class="gio-hang">
                                            <button class="button-giohang">
                                                <img src="/images/main/giohang.png">
                                            </button>
                                        </div>
                                    </a>
                                }
                            }
                        </li>                              
                        <li>
                            @{ if (ViewBag.UsersName != null)
                                {
                                    <a asp-controller="ASM" asp-action="Login">
                                        <div class="acount">

                                            <button class="button-acount">
                                                <img src="/images/main/account.png">
                                            </button>

                                        </div>
                                        <h3>@ViewBag.UsersName</h3>
                                    </a>
                                    <div class="sub-menu1">
                                        <ul>

                                            <li>
                                                <a asp-controller="Users" asp-action="Index">
                                                    <h3>Quản Lý Users</h3>
                                                </a>
                                                <a asp-controller="Products" asp-action="Create">
                                                    <h3>Quản Lý Sản Phẩm</h3>
                                                </a>
                                                <a onclick="location.href = '@Url.Action("Logout", "ASM")'">
                                                    <h3>Log Out</h3>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <a asp-controller="ASM" asp-action="Login">
                                        <div class="acount">

                                            <button class="button-acount">
                                                <img src="/images/main/account.png">
                                            </button>

                                        </div>
                                    </a>
                                }
                            }
                        </li>

                    </ul>
                </div>
            </div>
        </div>
    </section>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <section id="footer">
        <div class="footer container">
            <div class="brand">
                <h1><span>H</span>ien <span>S</span>tore</h1>
            </div>
            <h2>Sneaker</h2>
            <div class="social-icon">
                <div class="social-item">
                    <a href="#"><img src="/images/main/fb.png" /></a>
                </div>
                <div class="social-item">
                    <a href="#"><img src="/images/main/ins.png" /></a>
                </div>
                <div class="social-item">
                    <a href="#"><img src="/images/main/ytb.png" /></a>
                </div>
            </div>
            <p>Copyright © 2021 TanHien. All rights reserved</p>
        </div>
    </section>
    @*<script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)*@
</body>
</html>
